rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() &&
        request.auth.token.role == 'admin';
    }

    match /{allPaths=**} {
      // ğŸ”“ lectura pÃºblica (galerÃ­as, imÃ¡genes, etc.)
      allow read: if true;

      // ğŸ” solo admin puede subir / borrar
      allow write: if isAdmin();
    }
  }
}

