rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    /* ============================
       Helpers generales
       ============================ */

    function isSignedIn() {
      return request.auth != null;
    }

    function userDoc() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid));
    }

    function userRole() {
      return isSignedIn() ? userDoc().data.role : null;
    }

    function isRoot() {
      return userRole() == "root";
    }

    function isAdmin() {
      return userRole() == "admin";
    }

    function adminHasInmobiliaria(inmoId) {
      return isAdmin()
        && inmoId in userDoc().data.inmobiliarias;
    }

    function belongsToUserInmobiliaria(inmoId) {
      return isSignedIn()
        && inmoId in userDoc().data.inmobiliarias;
    }

    function isOwner(resource) {
      return isSignedIn()
        && resource.data.ownerId == request.auth.uid;
    }

    function isPublicInmueble(resource) {
      return resource.data.estado == "activo";
    }

    function isPublicInmueble(resource) {
  return resource != null
    && resource.data.estado == "activo"
    && resource.data.deleted == false;
}

function isSharedWithUser(resource) {
  return isSignedIn()
    && resource.data.sharedWith != null
    && request.auth.uid in resource.data.sharedWith;
}

    /* ============================
       USERS
       ============================ */

    match /users/{userId} {

      // El usuario puede leer su propio perfil
      allow read: if isSignedIn() && request.auth.uid == userId;

      // El usuario puede CREAR su propio doc (solo si no existe)
      allow create: if isSignedIn() && request.auth.uid == userId && !exists(/databases/$(database)/documents/users/$(userId));

      // Solo root puede modificar o borrar usuarios
      allow update, delete: if isRoot();
    }

    /* ============================
       INMOBILIARIAS
       ============================ */

    match /inmobiliarias/{inmoId} {

  allow read: if
    isRoot()
    || adminHasInmobiliaria(inmoId);

  allow write: if isRoot();

  match /inmuebles/{inmuebleId} {

    /* =========
       READ
       ========= */
    allow read: if
      isRoot()
      || adminHasInmobiliaria(inmoId)
      || isOwner(resource)
      || isSharedWithUser(resource)
      || isPublicInmueble(resource);

    /* =========
       CREATE
       ========= */
    allow create: if
      isSignedIn()
      && (
        isRoot()
        || (
          isAdmin()
          && belongsToUserInmobiliaria(inmoId)
          && request.resource.data.ownerId == request.auth.uid
          && request.resource.data.ownerInmobiliariaId == inmoId
        )
      );

    /* =========
       UPDATE
       ========= */
    allow update: if
      isSignedIn()
      && (
        isRoot()
        || adminHasInmobiliaria(inmoId)
        || isOwner(resource)
        || isSharedWithUser(resource)
      );

    /* =========
       DELETE (soft delete desde app)
       ========= */
    allow delete: if
      isRoot()
      || adminHasInmobiliaria(inmoId);
  }
}

    /* ============================
       TESTIMONIALS
       (comentarios públicos)
       ============================ */

    match /testimonials/{testimonialId} {

      // Lectura pública
      allow read: if true;

      // Crear comentario:
      // cualquier usuario logueado (sin rol)
      allow create: if isSignedIn();

      // Editar / borrar:
      // solo admin o root
      allow update, delete: if isAdmin() || isRoot();
    }

    /* ============================
       CIERRE TOTAL
       ============================ */

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
