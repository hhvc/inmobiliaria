rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    /* ============================
       Helpers generales
       ============================ */

    function isSignedIn() {
      return request.auth != null;
    }

    function userDoc() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid));
    }

    function userRole() {
      return isSignedIn() ? userDoc().data.role : null;
    }

    function isRoot() {
      return userRole() == "root";
    }

    function isAdmin() {
      return userRole() == "admin";
    }

    function adminHasInmobiliaria(inmoId) {
      return isAdmin()
        && inmoId in userDoc().data.inmobiliarias;
    }

    function isOwner(resource) {
      return isSignedIn()
        && resource.data.ownerId == request.auth.uid;
    }

    function belongsToUserInmobiliaria(inmoId) {
      return isSignedIn()
        && inmoId in userDoc().data.inmobiliarias;
    }

    function isPublicInmueble(resource) {
      return resource.data.estado == "activo";
    }

    /* ============================
       Colecci√≥n USERS
       ============================ */

    match /users/{userId} {

      // Cada usuario puede verse a s√≠ mismo
      allow read: if isSignedIn()
        && request.auth.uid == userId;

      // Solo root gestiona usuarios y roles
      allow write: if isRoot();
    }

    /* ============================
       Colecci√≥n INMOBILIARIAS
       ============================ */

    match /inmobiliarias/{inmoId} {

      // Lectura:
      // - root ve todo
      // - admin solo sus inmobiliarias
      allow read: if
        isRoot() ||
        adminHasInmobiliaria(inmoId);

      // Escritura:
      // - solo root
      allow write: if isRoot();
    }

    /* ============================
       Colecci√≥n INMUEBLES
       ============================ */

    match /inmuebles/{inmuebleId} {

      // üîç LECTURA
      allow read: if
        // p√∫blico (detalle p√∫blico)
        isPublicInmueble(resource)
        // admin de la inmobiliaria
        || adminHasInmobiliaria(resource.data.inmobiliariaId)
        // owner
        || isOwner(resource)
        // root
        || isRoot();

      // ‚úçÔ∏è CREAR
      allow create: if
        isSignedIn()
        && (
          // root crea cualquiera
          isRoot()

          // admin crea solo para sus inmobiliarias
          || (
            isAdmin()
            && belongsToUserInmobiliaria(request.resource.data.inmobiliariaId)
            && request.resource.data.ownerId == request.auth.uid
          )
        );

      // ‚úèÔ∏è ACTUALIZAR
      allow update: if
        isSignedIn()
        && (
          // root todo
          isRoot()

          // admin de la inmobiliaria
          || adminHasInmobiliaria(resource.data.inmobiliariaId)

          // owner del inmueble
          || isOwner(resource)
        );

      // üóëÔ∏è BORRAR
      allow delete: if
        isRoot()
        || adminHasInmobiliaria(resource.data.inmobiliariaId);
    }

    /* ============================
       Regla por defecto
       ============================ */

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
