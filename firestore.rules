rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper: usuario logueado
    function isSignedIn() {
      return request.auth != null;
    }

    // Helper: usuario admin
    function isAdmin() {
      return isSignedIn() &&
        request.auth.token.role == 'admin';
    }

    // ğŸ”“ Lectura pÃºblica
    match /{document=**} {
      allow read: if true;

      // ğŸ” Escritura solo admin
      allow write: if isAdmin();
    }
  }
}

