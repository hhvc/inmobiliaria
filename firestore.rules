rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    /* ============================
       Helpers generales
       ============================ */

    function isSignedIn() {
      return request.auth != null;
    }

    function userDoc() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid));
    }

    function userRole() {
      return isSignedIn() && userDoc().data.role;
    }

    function isRoot() {
      return isSignedIn() && userRole() == "root";
    }

    function isAdmin() {
      return isSignedIn() && userRole() == "admin";
    }

    function adminHasInmobiliaria(inmoId) {
      return isAdmin() &&
        inmoId in userDoc().data.inmobiliarias;
    }

    /* ============================
       Colecci贸n USERS
       ============================ */

    match /users/{userId} {
      // Cada usuario puede leerse a s铆 mismo
      allow read: if isSignedIn() && request.auth.uid == userId;

      // Solo root puede escribir usuarios (gesti贸n de roles)
      allow write: if isRoot();
    }

    /* ============================
       Colecci贸n INMOBILIARIAS
       ============================ */

    match /inmobiliarias/{inmoId} {

      //  Lectura:
      // - root ve todo
      // - admin solo sus inmobiliarias
      allow read: if
        isRoot() ||
        adminHasInmobiliaria(inmoId);

      // 锔 Escritura:
      // - solo root (crear / editar / borrar)
      allow write: if isRoot();
    }

    /* ============================
       Colecci贸n INMUEBLES (futuro)
       ============================ */

    match /inmuebles/{inmuebleId} {
      // Por ahora cerrado
      allow read, write: if false;
    }

    /* ============================
       Regla por defecto
       ============================ */

    //  Todo lo que no est茅 definido arriba queda cerrado
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
